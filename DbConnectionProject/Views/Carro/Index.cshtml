@model (IEnumerable<DbConnectionProject.Models.Models.Carro>,IEnumerable<DbConnectionProject.Models.Models.Pessoa> )

@{
    ViewData["Title"] = "Index";
    List<Carro> carros = Model.Item1.ToList();
    List<Pessoa> pessoas = Model.Item2.ToList();
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item1.FirstOrDefault().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item1.FirstOrDefault().Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item1.FirstOrDefault().Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item1.FirstOrDefault().DonoId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Item1.ToList())
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modelo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
                <td>
                    @pessoas.Where(x=> x.Id == item.DonoId).FirstOrDefault().Nome
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
